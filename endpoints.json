      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Retrieves all comments for the given article ID",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2017-11-22T12:36:03.389Z",
